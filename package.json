{
  "name": "@natlibfi/melinda-rest-api-importer",
  "description": "API microservice of Melinda record batch import system",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [],
  "homepage": "https://github.com/NatLibFi/melinda-rest-api-importer",
  "bugs": {
    "url": "https://github.com/NatLibFi/melinda-rest-api-importer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:NatLibFi/melinda-rest-api-importer.git"
  },
  "license": "AGPL-3.0+",
  "version": "0.0.1",
  "main": "./dist/app.js",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "start": "node -r esm ./dist/app",
    "start:dev": "babel-node ./src/app",
    "lint": "eslint ./src",
    "lint:dev": "eslint ./src --fix",
    "check-deps": "npm-check;exit 0",
    "test": "npm run lint",
    "test:dev": "npm run lint:dev",
    "dev": "NODE_ENV=development cross-env DEBUG=1 nodemon",
    "build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist --minified",
    "prod": "NODE_ENV=production npm run build && npm run start"
  },
  "dependencies": {
    "@natlibfi/melinda-commons": "^7.2.1",
    "body-parser": "^1.19.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "moment": "^2.24.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.5.5",
    "@natlibfi/eslint-config-melinda-backend": ">1.0.0-alpha.1",
    "babel-eslint": "^10.0.2",
    "cross-env": "^7.0.0",
    "eslint": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^2.0.2",
    "npm-check": "^5.9.0"
  },
  "eslintConfig": {
    "extends": "@natlibfi/melinda-backend"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "12"
          }
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run test:dev && npm run start:dev",
    "watch": [
      "src/*"
    ],
    "ext": "js",
    "delay": 2.5
  }
}
